
<h1>Add Expense to <%= @expense_group.name %></h1>

<%= form_with(model: [@expense_group, @expense], url: expense_group_expenses_path(@expense_group, @expense), method: :post) do |form| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% @expense.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description %>
    <%= form.text_field :description, required: true %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.text_field :amount, required: true %>
  </div>

  <div>
    <%= form.label :user_id, "Select User" %>
    <%= form.collection_select(:user_id, @expense_group.users, :id, :email, { prompt: "Select a user" }, { required: true }) %>
  </div>

  <div>
    <%= form.submit 'Create Expense' %>
  </div>
<% end %>


<%= link_to 'Back', expense_group_expenses_path(@expense_group) %>
